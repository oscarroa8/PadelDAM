<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    >

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Editar cliente"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="1250dp"
        android:layout_height="75dp"
        android:layout_below="@id/textViewTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editTextApellido1"
        android:layout_width="1254dp"
        android:layout_height="78dp"
        android:layout_below="@id/editTextNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Primer Apellido" />

    <EditText
        android:id="@+id/editTextApellido2"
        android:layout_width="1246dp"
        android:layout_height="66dp"
        android:layout_below="@id/editTextApellido1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Segundo Apellido" />

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="1240dp"
        android:layout_height="65dp"
        android:layout_below="@id/editTextApellido2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Teléfono"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="1242dp"
        android:layout_height="75dp"
        android:layout_below="@id/editTextTelefono"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@id/editTextMail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="544dp"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/black"

        android:layout_marginEnd="553dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="actualizarCliente"
        android:text="Guardar"
        android:textSize="20dp" />

</RelativeLayout>
