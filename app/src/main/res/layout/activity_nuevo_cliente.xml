<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    >

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Nuevo cliente"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="1250dp"
        android:layout_height="75dp"
        android:layout_below="@id/textViewTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editTextApellido1"
        android:layout_width="1254dp"
        android:layout_height="78dp"
        android:layout_below="@id/editTextNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Primer Apellido" />

    <EditText
        android:id="@+id/editTextApellido2"
        android:layout_width="1246dp"
        android:layout_height="66dp"
        android:layout_below="@id/editTextApellido1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Segundo Apellido" />

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="1240dp"
        android:layout_height="65dp"
        android:layout_below="@id/editTextApellido2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Teléfono"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="1242dp"
        android:layout_height="75dp"
        android:layout_below="@id/editTextTelefono"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="324dp"
        android:layout_marginTop="621dp"
        android:onClick="volverAtras"
        android:text="Volver" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="137dp"
        android:layout_height="69dp"
        android:layout_below="@id/editTextMail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="857dp"
        android:layout_marginTop="23dp"
        android:onClick="insertarCliente"
        android:text="Guardar" />

</RelativeLayout>
