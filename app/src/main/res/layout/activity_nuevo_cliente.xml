<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    >

    <RelativeLayout
        android:id="@+id/relativeCliente"
        android:layout_width="1264dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/person_line_drawing_plus_svgrepo_com"
            android:drawableEnd="@drawable/person_line_drawing_plus_svgrepo_com"
            android:drawablePadding="8dp"

            android:text="Nuevo Cliente"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="1250dp"
        android:layout_height="75dp"
        android:layout_below="@id/relativeCliente"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editTextApellido1"
        android:layout_width="1254dp"
        android:layout_height="78dp"
        android:layout_below="@id/editTextNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Primer Apellido" />

    <EditText
        android:id="@+id/editTextApellido2"
        android:layout_width="1246dp"
        android:layout_height="66dp"
        android:layout_below="@id/editTextApellido1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Segundo Apellido" />

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="1240dp"
        android:layout_height="65dp"
        android:layout_below="@id/editTextApellido2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Teléfono"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="1242dp"
        android:layout_height="75dp"
        android:layout_below="@id/editTextTelefono"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="137dp"
        android:layout_height="69dp"
        android:layout_below="@id/editTextMail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="570dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="insertarCliente"
        android:shadowColor="#201F1F"
        android:text="Guardar"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

</RelativeLayout>
