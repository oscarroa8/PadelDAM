<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pistas">

    <TextView
        android:id="@+id/textViewTituloPistas"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Lista de pistas"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listaPistas"
        android:layout_width="1292dp"
        android:layout_height="624dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrearPista"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:onClick="crearPista"
        android:text="Nueva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaPistas" />

    <Button
        android:id="@+id/button"
        android:layout_width="111dp"
        android:layout_height="64dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:onClick="volverPistas"
        android:text="volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaPistas" />
</androidx.constraintlayout.widget.ConstraintLayout>