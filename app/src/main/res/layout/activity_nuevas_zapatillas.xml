<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Nuevas Zapatillas"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="1254dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etPrecioZapas"
        android:layout_width="1251dp"
        android:layout_height="66dp"
        android:layout_below="@+id/etMarca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:hint="Precio" />

    <EditText
        android:id="@+id/etTalla"
        android:layout_width="1251dp"
        android:layout_height="66dp"
        android:layout_below="@+id/etMarca"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="132dp"
        android:hint="Talla" />

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="1251dp"
        android:layout_height="65dp"
        android:layout_below="@+id/etNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:hint="Marca"/>

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="367dp"
        android:layout_marginTop="540dp"
        android:onClick="volverAtras"
        android:text="Volver" />

    <Button
        android:id="@+id/btnCrearZapas"
        android:layout_width="152dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="832dp"
        android:layout_marginTop="534dp"
        android:onClick="crearBote"
        android:text="Crear Zapatilla" />

</RelativeLayout>