<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    >

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Añadir pista"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNombrePista"
        android:layout_width="1250dp"
        android:layout_height="75dp"
        android:layout_below="@id/textViewTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etNumero"
        android:layout_width="1254dp"
        android:layout_height="78dp"
        android:layout_below="@id/editTextNombrePista"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Numero de la pista"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etMaterialPista"
        android:layout_width="1246dp"
        android:layout_height="66dp"
        android:layout_below="@id/etNumero"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Material de la pista" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="1254dp"
        android:layout_height="78dp"
        android:layout_below="@id/etMaterialPista"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Precio por hora"
        android:inputType="number"/>


    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@+id/etPrecio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="55dp"
        android:background="@color/primaryColor"
        android:onClick="volverAtras"
        android:text="Volver"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCrearP"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@+id/etPrecio"
        android:layout_alignParentEnd="true"
        android:background="@color/primaryColor"
        android:layout_marginTop="55dp"
        android:textSize="20dp"
        android:layout_marginEnd="300dp"
        android:onClick="insertarPista"
        android:text="Añadir" />


</RelativeLayout>
