<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="1264dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/pelotablanca"
            android:drawableEnd="@drawable/pelotablanca"

            android:drawablePadding="8dp"
            android:text="Añadir bote de pelotas"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <EditText
        android:id="@+id/etNombre"
        android:layout_width="1254dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etPrecioBote"
        android:layout_width="1251dp"
        android:layout_height="66dp"
        android:layout_below="@+id/etMarca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="1251dp"
        android:layout_height="65dp"
        android:layout_below="@+id/etNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:hint="Marca"/>

    <Button
        android:id="@+id/btnCrearBote"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@+id/etPrecioBote"
        android:layout_alignParentStart="true"
        android:layout_marginStart="550dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="@color/btn_color"
        android:textColor="@android:color/black"

        android:onClick="crearBote"
        android:text="Añadir"
        android:textSize="20dp" />

</RelativeLayout>
