<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir bote de pelotas"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="1254dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etPrecioZapas"
        android:layout_width="1251dp"
        android:layout_height="66dp"
        android:layout_below="@+id/etMarca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="1251dp"
        android:layout_height="65dp"
        android:layout_below="@+id/etNombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:hint="Marca"/>

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@+id/etPrecioZapas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="55dp"
        android:background="@color/primaryColor"
        android:onClick="volverAtras"
        android:text="Volver"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCrearZapas"
        android:layout_width="183dp"
        android:layout_height="76dp"
        android:layout_below="@+id/etPrecioZapas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="680dp"
        android:layout_marginTop="52dp"
        android:background="@color/primaryColor"
        android:onClick="crearBote"
        android:text="Añadir"
        android:textSize="20dp" />

</RelativeLayout>
